<fieldset class="col-md-7">
     <legend>Approval Information</legend>

     <div class="panel panel-default">
       <div class="panel-body">
           <div class="form-border">
             <strong>ID:</strong>
             <%= @role.id %>
           </div>
           <div class="form-border">
             <strong>Name:</strong>
             <%= @role.name %>
           </div>
       </div>
     </div>

     <%= link_to 'Edit', edit_role_path(@role) , class: "btn btn-info" %> |
     <%= link_to 'Back', roles_path , class: "btn btn-info" %>

</fieldset>
