<h1>Profiles</h1>

<table class="table">
  <thead>
    <tr>
      <%= content_tag :th, 'User ID' %>
      <%= content_tag :th, 'First Name' %>
      <%= content_tag :th, 'Last Name' %>
      <%= content_tag :th, 'Department' %>
      <%= content_tag :th, 'Rank' %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <%= content_tag :td, profile.user_id %>
        <%= content_tag :td, profile.first_name %>
        <%= content_tag :td, profile.last_name %>
        <%= content_tag :td, profile.department %>
        <%= content_tag :td, profile.rank_id %>
        <td><%= link_to 'Show', profile, class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) , class: "btn btn-info"  %></td>
        <td><%= button_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, class: "btn btn-info"  %>

<br><%= page_entries_info @profiles %><br>
<%= paginate @profiles, theme: 'twitter-bootstrap-4' %>
